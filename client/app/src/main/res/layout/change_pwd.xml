<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="비밀번호 재설정"
            android:textColor="#0E3F6C"
            android:fontFamily="@font/elicebold"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#0E3F6C"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:id="@+id/view"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginTop="50dp"
            android:background="#0E3F6C"
            android:layout_gravity="top"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="비밀번호 재설정"
            android:textColor="#0E3F6C"
            android:fontFamily="@font/cafe"
            android:textSize="18sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginTop="50dp"
            android:background="#0E3F6C"
            android:layout_gravity="top"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"

            android:text="1. 회원정보 확인   >"
            android:textColor="#0E3F6C"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   2. 비밀번호 재설정"
            android:fontFamily="@font/elicebold"
            android:textColor="#0E3F6C"
            android:textSize="10dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="변경하고자 하는 비밀번호를 입력해주세요"
        android:textColor="#0E3F6C"
        android:fontFamily="@font/elicebold"
        android:textSize="14dp"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <EditText
                android:id="@+id/change_pwd"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/gray_color_box_border"
                android:color="#2196F3"
                android:hint="변경할 비밀번호 입력"
                android:paddingStart="15dp"
                android:fontFamily="@font/eliceregular"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/change_pwd2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_color_box_border"
                android:color="#2196F3"
                android:hint="비밀번호 재확인"
                android:paddingStart="15dp"
                android:fontFamily="@font/eliceregular"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/button5"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_button"
            android:onClick="bt_change_pwd"
            android:text="변경하기"
           android:textColor="#0E3F6C"
            android:fontFamily="@font/elicebold"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>