<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--뷰크기 가로 417dp-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="80dp"
                android:layout_height="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:background="#DCDCDC" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="SignUp with"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/view2"
                android:layout_width="80dp"
                android:layout_height="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:background="#DCDCDC" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="320dp"
        android:layout_height="382dp"
        android:layout_marginLeft="48.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/signup_user_id"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/gray_color_box_border"
                android:color="#2196F3"
                android:hint="아이디 입력"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_user_pwd"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_color_box_border"
                android:color="#2196F3"
                android:hint="비밀번호 입력"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_user_pwd2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_color_box_border"
                android:color="#2196F3"
                android:hint="확인 비밀번호 입력"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_user_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_color_box_border"
                android:color="#2196F3"
                android:hint="이름 입력"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_user_phnum"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_color_box_border"
                android:color="#2196F3"
                android:hint="전화번호 입력"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button5"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/login_button"
        android:onClick="SignUp_UserRequest"
        android:text="회원가입"
        android:textColor="#2196F3"
        android:textSize="20sp" />

</LinearLayout>