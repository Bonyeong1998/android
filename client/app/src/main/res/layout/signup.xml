<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#0E3F6C"
            android:fontFamily="@font/elicebold"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#0E3F6C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="해당되는 버튼을 클릭하세요"
            android:textColor="#0E3F6C"
            android:fontFamily="@font/elicebold"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal"
        android:gravity="center|top">

        <Button
            android:id="@+id/button7"
            android:layout_width="178dp"
            android:layout_height="257dp"
            android:background="@drawable/select_usertype"
            android:drawableTop="@drawable/signup_shop_pic"
            android:onClick="go_owner_sign_page"
            android:layout_margin="10dp"
            android:paddingTop="20dp"
            android:text="가맹점주"
            android:textColor="#0E3F6C"
            android:fontFamily="@font/elicebold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="178dp"
            android:layout_height="257dp"
            android:background="@drawable/select_usertype"
            android:drawableTop="@drawable/signup_user_pic"
            android:onClick="go_user_sign_page"
            android:layout_margin="10dp"
            android:paddingTop="20dp"
            android:text="일반 사용자"
            android:textColor="#0E3F6C"
            android:fontFamily="@font/elicebold"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>